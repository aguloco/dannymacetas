<!DOCTYPE html>
<html>
<head>

    <%- include('partials/head', {title: 'Registrar usuario'}) %>
    <link rel="stylesheet" href="/css/login-register.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
</head>
<body>

    <%- include('./partials/header') %>

   <br> <div class="container-fluid bg-login-register">
        <br>  <br>  <br>  <br>  <br>  <br>  <br>  <br> 
        <div class="row justify-content-center">
            <div class="col-lg-4 mt-5">

                <form action="/usuario/registro" method="POST" class="loginRegisterForm mt-5 text-white" enctype="multipart/form-data">
                    
                    <i class="fa-solid fa-user text-black"></i>
                    <p class="h2 text-center text-black">Registrate</p>
                
                    <div class="row">
                        <div class="col-lg-6 mb-3 ">
                            <label for="nombreUsuario" class="form-label text-black"> Nombre </label>
                            <input type="text" name="nombreUsuario" id="nombreUsuario" class="form-control
                                <%= locals.errors && errors.nombreUsuario ? 'is-invalid': null%>"
                                value="<%= locals.oldData ? oldData.nombreUsuario : null %>"
                            >
                            <%if (locals.errors && errors.nombreUsuario) {%>
                                <div class="text-danger">
                                    <%= errors.nombreUsuario.msg%>
                                </div>
                            <% } %>
                        </div>
                        
                        <div class="col-lg-6 mb-3 ">
                            <label for="apellidoUsuario" class="form-label text-black"> Apellido </label>
                            <input type="text" name="apellidoUsuario" id="apellidoUsuario" class="form-control 
                                <%= locals.errors && errors.apellidoUsuario ? 'is-invalid': null%>"
                                value="<%= locals.oldData ? oldData.apellidoUsuario : null %>"
                            >
                            <%if (locals.errors && errors.apellidoUsuario) {%>
                                <div class="text-danger">
                                    <%= errors.apellidoUsuario.msg%>
                                </div>
                            <% } %>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-6 mb-3">  
                            <label for="emailUsuario" class="form-label text-black"> Email </label>
                            <input type="email" name="emailUsuario" id= "emailUsuario" class="form-control 
                                <%= locals.errors && errors.emailUsuario ? 'is-invalid': null%>"
                                value="<%= locals.oldData ? oldData.emailUsuario : null %>"
                            >
                            <%if (locals.errors && errors.emailUsuario) {%>
                                <div class="text-danger">
                                    <%= errors.emailUsuario.msg%>
                                </div>
                            <% } %>
                        </div>

                        <div class="col-lg-6 mb-3"> 
                            <label for="claveUsuario" class="form-label text-black"> Contraseña </label>
                            <input type="password" name="claveUsuario" id="claveUsuario" class="form-control 
                                <%= locals.errors && errors.claveUsuario ? 'is-invalid': null%>"
                            >
                            <%if (locals.errors && errors.claveUsuario) {%>
                                <div class="text-danger">
                                    <%= errors.claveUsuario.msg%>
                                </div>
                            <% } %>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-6 mb-3">
                            <label for="direccionUsuario" class="form-label text-black"> Dirección </label>
                            <input type="text" name="direccionUsuario" class="form-control 
                                <%= locals.errors && errors.direccionUsuario ? 'is-invalid': null%>"
                                value="<%= locals.oldData ? oldData.direccionUsuario : null %>"
                            >
                            <%if (locals.errors && errors.direccionUsuario) {%>
                                <div class="text-danger">
                                    <%= errors.direccionUsuario.msg%>
                                </div>
                            <% } %>
                        </div>

                        <div class="col-lg-6 mb-3">
                            <label for="avatar" class="form-label text-black"> Imagen de perfil: </label>
                            <input type="file" name="avatar" id="avatar" class="form-control">
                            <%if (locals.errors && errors.avatar) {%>
                                <div class="text-danger">
                                    <%= errors.avatar.msg%>
                                </div>
                            <%} %>
                        </div>
                    </div>

                    <div class="col-12">  
                        <button type="submit" class="btn btn-primary form-control"> Enviar </button>
                    </div>
                    
                </form>
            </div>
        </div>

    </div>
   


    <script src="/js/registro.js"> </script>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>
</body>

<!-- Footer -->
<footer class="bg-light text-center text-lg-start">
    <!-- Copyright -->
<div class="text-center p-3 text-white" style="background-color: rgb(8, 132, 109);">
© 2023 Copyright:
<a class="text-white" href="https://Plany.com/">Plany.com</a>
</div>
   <!-- Copyright -->
</footer>
    
</html>